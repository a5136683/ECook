<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/home_list_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#5000"
            android:alpha="0.8"/>
        <TextView
            android:id="@+id/home_list_content"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/home_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdsda"/>
        <TextView
            android:id="@+id/home_list_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="asdsda"/>
        <TextView
            android:id="@+id/home_list_name"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/home_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdsda"/>
        <ImageView
            android:id="@+id/home_list_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>