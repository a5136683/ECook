<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/home_list_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:background="@drawable/gradient_color"
            android:gravity="right">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_toLeftOf="@+id/home_list_iv_parise"
                android:src="@mipmap/home_thumb_able" />

            <TextView
                android:id="@+id/home_list_iv_parise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="测试"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_toLeftOf="@+id/home_list_iv_collection"
                android:src="@mipmap/home_collect_able" />

            <TextView
                android:id="@+id/home_list_iv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:text="测试"
                android:textColor="#fff" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/home_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="title" />

    <ImageView
        android:id="@+id/home_list_user"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/home_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="用户名称" />

    <TextView
        android:id="@+id/home_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:lines="2"
        android:ellipsize="end"/>
</LinearLayout>