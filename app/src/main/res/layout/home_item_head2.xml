<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/home_item_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/home_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="测试文本"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/home_item_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right"
        android:padding="8dp"
        android:text="点赞"
        android:textColor="#999" />

    <TextView
        android:id="@+id/home_item_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:padding="8dp"
        android:text="收藏"
        android:textColor="#999" />

    <ImageView
        android:id="@+id/home_item_userImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:padding="8dp" />

    <TextView
        android:id="@+id/home_item_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:text="网名"
        android:textColor="#777"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/home_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:text="网名"
        android:textColor="#999"
        android:textSize="10sp" />

    <include layout="@layout/show_all_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-专辑菜谱-"
        android:textSize="20sp"
        android:gravity="center"/>
</LinearLayout>